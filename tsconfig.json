{
    "compilerOptions": {
        "target": "esnext",
        "module": "Node16",
        "moduleResolution": "node16",
        "strict": true,
        "allowJs": true,
        "noImplicitAny": false,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["esnext", "dom"],
        "types": ["vite/client"],
        "baseUrl": "./",
        "paths": {
            "~/*": ["resources/*"]
        }
    },
    "include": ["resources/**/*","src/main.ts"],
    "exclude": ["public/**/*", "node_modules", "vendor"]
}