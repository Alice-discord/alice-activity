{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["esnext", "dom"],
        "types": ["vite/client"],
        "baseUrl": "./",
        "paths": {
            "~/*": ["resources/*"]
        }
    },
    "include": ["resources/**/*","./scripts/main.tsx"],
    "exclude": ["public/**/*", "node_modules", "vendor"]
}